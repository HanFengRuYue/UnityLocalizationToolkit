<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UnityLocalizationToolkit.Pages.FontReplacementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnityLocalizationToolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer Padding="40,20,40,40">
        <StackPanel Spacing="24">
            
            <!-- 页面标题 -->
            <TextBlock 
                Text="修改游戏字体" 
                Style="{StaticResource TitleTextBlockStyle}" />
            
            <!-- 项目状态提示 -->
            <InfoBar 
                x:Name="ProjectStatusInfoBar"
                Title="提示"
                Message="请先在主页中选择游戏目录"
                Severity="Warning"
                IsOpen="True"
                IsClosable="False" />
            
            <!-- 字体扫描区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="字体扫描" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="ScanFontsButton"
                            Content="扫描字体资源"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"
                            Click="ScanFontsButton_Click" />
                        
                        <ComboBox 
                            x:Name="FontTypeFilterComboBox"
                            Header="字体类型筛选"
                            SelectedIndex="0"
                            SelectionChanged="FontTypeFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="全部" Tag="All" />
                            <ComboBoxItem Content="传统字体" Tag="Traditional" />
                            <ComboBoxItem Content="TMP字体" Tag="TMP" />
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="ScanStatusText" Text="等待扫描..." />
                        <ProgressBar 
                            x:Name="ScanProgressBar"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            IsIndeterminate="False" />
                    </StackPanel>
                </StackPanel>
            </Expander>
            
            <!-- 字体列表区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="字体列表" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <InfoBadge x:Name="FontCountBadge" Value="0" />
                    </StackPanel>
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    
                    <!-- 数据表格 -->
                    <Border 
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        MinHeight="250">
                        <ListView 
                            x:Name="FontListView"
                            SelectionMode="Single"
                            SelectionChanged="FontListView_SelectionChanged">
                            <ListView.Header>
                                <Grid Padding="16,12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="字体名称" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="类型" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="状态" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="3" Text="资源文件" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            
                            <!-- 占位提示 -->
                            <ListViewItem IsEnabled="False">
                                <TextBlock 
                                    Text="暂无数据，请先扫描字体资源" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </ListViewItem>
                        </ListView>
                    </Border>
                </StackPanel>
            </Expander>
            
            <!-- 字体替换区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="字体替换" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    
                    <!-- 选中的字体信息 -->
                    <Grid 
                        x:Name="SelectedFontPanel"
                        Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="选中字体：" FontWeight="SemiBold" Margin="0,0,16,8" />
                        <TextBlock x:Name="SelectedFontNameText" Grid.Row="0" Grid.Column="1" Text="-" Margin="0,0,0,8" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="字体类型：" FontWeight="SemiBold" Margin="0,0,16,8" />
                        <TextBlock x:Name="SelectedFontTypeText" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,0,0,8" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="关联资源：" FontWeight="SemiBold" Margin="0,0,16,0" />
                        <TextBlock x:Name="SelectedFontAssetsText" Grid.Row="2" Grid.Column="1" Text="-" TextWrapping="Wrap" />
                    </Grid>
                    
                    <!-- 未选中提示 -->
                    <InfoBar 
                        x:Name="NoSelectionInfoBar"
                        Title="提示"
                        Message="请从上方列表中选择一个字体进行替换"
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="False" />
                    
                    <!-- TMP字体说明 -->
                    <InfoBar 
                        x:Name="TMPInfoBar"
                        Title="TMP字体说明"
                        Message="TextMeshPro字体包含MonoBehaviour、Texture2D和Material三个关联资源，程序会自动识别并替换全部关联资源"
                        Severity="Informational"
                        IsOpen="False"
                        IsClosable="True" />
                    
                    <!-- 替换操作 -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox 
                            x:Name="ReplacementFontPathTextBox"
                            Grid.Column="0"
                            Header="替换字体文件"
                            PlaceholderText="选择.ttf或.otf字体文件..."
                            IsReadOnly="True" />
                        
                        <Button 
                            x:Name="SelectReplacementFontButton"
                            Grid.Column="1"
                            Content="选择字体"
                            VerticalAlignment="Bottom"
                            IsEnabled="False"
                            Click="SelectReplacementFontButton_Click" />
                        
                        <Button 
                            x:Name="ApplyReplacementButton"
                            Grid.Column="2"
                            Content="应用替换"
                            Style="{StaticResource AccentButtonStyle}"
                            VerticalAlignment="Bottom"
                            IsEnabled="False"
                            Click="ApplyReplacementButton_Click" />
                    </Grid>
                    
                    <!-- 操作状态 -->
                    <InfoBar 
                        x:Name="ReplacementStatusInfoBar"
                        IsOpen="False"
                        IsClosable="True" />
                </StackPanel>
            </Expander>
            
            <!-- TMP字体识别说明 -->
            <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="TMP字体识别特征" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="12" Padding="0,16,0,0">
                    <TextBlock 
                        Text="程序通过以下特征识别TextMeshPro字体资源（即使名称不包含SDF字样）："
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <Grid ColumnSpacing="24" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <FontIcon Grid.Row="0" Grid.Column="0" Glyph="&#xE73E;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="包含 m_FaceInfo 字段（字体面信息）" />
                        
                        <FontIcon Grid.Row="1" Grid.Column="0" Glyph="&#xE73E;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="包含 m_GlyphTable 字段（字形表）" />
                        
                        <FontIcon Grid.Row="2" Grid.Column="0" Glyph="&#xE73E;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="包含 m_CharacterTable 字段（字符表）" />
                        
                        <FontIcon Grid.Row="3" Grid.Column="0" Glyph="&#xE73E;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="包含 material 引用（指向关联Material）" />
                        
                        <FontIcon Grid.Row="4" Grid.Column="0" Glyph="&#xE73E;" Foreground="{ThemeResource SystemAccentColor}" />
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="包含 m_AtlasPopulationMode 字段（纹理填充模式）" />
                    </Grid>
                </StackPanel>
            </Expander>
            
        </StackPanel>
    </ScrollViewer>
</Page>
