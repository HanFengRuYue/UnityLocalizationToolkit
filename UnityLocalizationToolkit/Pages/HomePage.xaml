<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UnityLocalizationToolkit.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnityLocalizationToolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer Padding="40,20,40,40">
        <StackPanel Spacing="24">
            
            <!-- 页面标题 -->
            <TextBlock 
                Text="主页" 
                Style="{StaticResource TitleTextBlockStyle}" />
            
            <TextBlock 
                Text="配置Unity游戏项目路径和基本设置"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            
            <!-- 项目设置区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="项目设置" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox 
                            x:Name="GamePathTextBox"
                            Grid.Column="0"
                            Header="游戏目录"
                            PlaceholderText="选择Unity游戏的根目录..."
                            IsReadOnly="True" />
                        
                        <Button 
                            x:Name="SelectFolderButton"
                            Grid.Column="1"
                            Content="选择目录"
                            VerticalAlignment="Bottom"
                            Click="SelectFolderButton_Click" />
                    </Grid>
                    
                    <Grid ColumnSpacing="16" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="后端类型"
                            Style="{StaticResource CaptionTextBlockStyle}" />

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="源语言（游戏原始语言）"
                            Style="{StaticResource CaptionTextBlockStyle}" />
                        
                        <InfoBar 
                            x:Name="BackendInfoBar"
                            Grid.Row="1"
                            Grid.Column="0"
                            Message="请先选择游戏目录"
                            Severity="Informational"
                            IsOpen="True"
                            VerticalAlignment="Stretch"
                            IsClosable="False" />
                        
                        <ComboBox 
                            x:Name="SourceLanguageComboBox"
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Stretch"
                            SelectedIndex="6"
                            VerticalAlignment="Stretch"
                            SelectionChanged="SourceLanguageComboBox_SelectionChanged">
                            <ComboBoxItem Content="日语" Tag="ja" />
                            <ComboBoxItem Content="英语" Tag="en" />
                            <ComboBoxItem Content="韩语" Tag="ko" />
                            <ComboBoxItem Content="简体中文" Tag="zh-CN" />
                            <ComboBoxItem Content="繁体中文" Tag="zh-TW" />
                            <ComboBoxItem Content="其他" Tag="other" />
                            <ComboBoxItem Content="不限制" Tag="none" />
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Expander>
            
            <!-- 项目信息区域 -->
            <Expander x:Name="ProjectInfoExpander" IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Visibility="Collapsed">
                <Expander.Header>
                    <TextBlock Text="项目信息" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="12" Padding="0,16,0,0">
                    <Grid ColumnSpacing="24" RowSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="游戏路径：" FontWeight="SemiBold" />
                        <TextBlock x:Name="ProjectPathText" Grid.Row="0" Grid.Column="1" Text="-" TextWrapping="Wrap" />
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="数据目录：" FontWeight="SemiBold" />
                        <TextBlock x:Name="DataPathText" Grid.Row="1" Grid.Column="1" Text="-" TextWrapping="Wrap" />
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="资源文件数量：" FontWeight="SemiBold" />
                        <TextBlock x:Name="AssetCountText" Grid.Row="2" Grid.Column="1" Text="-" />
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Bundle文件数量：" FontWeight="SemiBold" />
                        <TextBlock x:Name="BundleCountText" Grid.Row="3" Grid.Column="1" Text="-" />
                    </Grid>
                </StackPanel>
            </Expander>
            
            <!-- 快速操作区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="快速操作" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <TextBlock 
                        Text="选择游戏目录后，可以进入以下功能页面进行操作："
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="GoToTextButton"
                            IsEnabled="False"
                            Click="GoToTextButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8AC;" FontSize="16" />
                                <TextBlock Text="修改游戏文本" />
                            </StackPanel>
                        </Button>
                        
                        <Button 
                            x:Name="GoToFontButton"
                            IsEnabled="False"
                            Click="GoToFontButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8D2;" FontSize="16" />
                                <TextBlock Text="修改游戏字体" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Expander>
            
        </StackPanel>
    </ScrollViewer>
</Page>
