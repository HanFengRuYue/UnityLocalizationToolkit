<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UnityLocalizationToolkit.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnityLocalizationToolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent"
    Loaded="Page_Loaded">

    <ScrollViewer Padding="40,20,40,40">
        <StackPanel Spacing="24" MaxWidth="800" HorizontalAlignment="Left">
            
            <!-- 页面标题 -->
            <TextBlock 
                Text="设置" 
                Style="{StaticResource TitleTextBlockStyle}" />
            
            <!-- 外观设置 -->
            <StackPanel Spacing="4">
                <TextBlock Text="外观" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock 
                    Text="自定义应用程序的外观主题" 
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>
            
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="16">
                    <TextBlock Text="应用主题" FontWeight="SemiBold" />
                    
                    <RadioButtons x:Name="ThemeRadioButtons" SelectionChanged="ThemeRadioButtons_SelectionChanged">
                        <RadioButton x:Name="SystemThemeRadioButton" Tag="System">
                            <StackPanel Spacing="4">
                                <TextBlock Text="跟随系统" />
                                <TextBlock 
                                    Text="自动匹配Windows系统的主题设置" 
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </RadioButton>
                        
                        <RadioButton x:Name="LightThemeRadioButton" Tag="Light">
                            <StackPanel Spacing="4">
                                <TextBlock Text="浅色模式" />
                                <TextBlock 
                                    Text="使用浅色背景和深色文字" 
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </RadioButton>
                        
                        <RadioButton x:Name="DarkThemeRadioButton" Tag="Dark">
                            <StackPanel Spacing="4">
                                <TextBlock Text="深色模式" />
                                <TextBlock 
                                    Text="使用深色背景和浅色文字" 
                                    FontSize="12"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </StackPanel>
                        </RadioButton>
                    </RadioButtons>
                </StackPanel>
            </Border>
            
            <!-- 关于 -->
            <StackPanel Spacing="4" Margin="0,24,0,0">
                <TextBlock Text="关于" Style="{StaticResource SubtitleTextBlockStyle}" />
            </StackPanel>
            
            <Border 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16">
                <StackPanel Spacing="16">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <Border 
                            Grid.Column="0"
                            Width="64" 
                            Height="64"
                            CornerRadius="8"
                            Background="{ThemeResource AccentFillColorDefaultBrush}">
                            <FontIcon 
                                Glyph="&#xE774;" 
                                FontSize="32"
                                Foreground="White" />
                        </Border>
                        
                        <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                            <TextBlock 
                                Text="Unity本地化工具箱" 
                                Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock 
                                Text="版本 1.0.0" 
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock 
                        Text="一款用于Unity游戏本地化汉化的工具，支持文本提取、翻译导入和字体替换功能。"
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="功能特性：" FontWeight="SemiBold" />
                        <StackPanel Spacing="4" Margin="16,0,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="支持Mono和IL2CPP后端游戏" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="扫描Assembly-CSharp.dll中的字符串" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="解析MonoBehaviour和TextAsset资源" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="导出/导入Excel翻译表格" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}" />
                                <TextBlock Text="传统字体和TMP字体替换" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="技术栈：" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                                <TextBlock Text="WinUI 3" FontFamily="Consolas" />
                            </Border>
                            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                                <TextBlock Text=".NET 10" FontFamily="Consolas" />
                            </Border>
                            <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                                <TextBlock Text="AssetsTools.NET" FontFamily="Consolas" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</Page>
