<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UnityLocalizationToolkit.Pages.TextTranslationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnityLocalizationToolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer Padding="40,20,40,40">
        <StackPanel Spacing="24">
            
            <!-- 页面标题 -->
            <TextBlock 
                Text="修改游戏文本" 
                Style="{StaticResource TitleTextBlockStyle}" />
            
            <!-- 项目状态提示 -->
            <InfoBar 
                x:Name="ProjectStatusInfoBar"
                Title="提示"
                Message="请先在主页中选择游戏目录"
                Severity="Warning"
                IsOpen="True"
                IsClosable="False" />
            
            <!-- 扫描控制区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="文本扫描" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="ScanButton"
                            Content="扫描游戏文本"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"
                            Click="ScanButton_Click">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="S" />
                            </Button.KeyboardAccelerators>
                        </Button>
                        
                        <Button 
                            x:Name="StopScanButton"
                            Content="停止扫描"
                            IsEnabled="False"
                            Click="StopScanButton_Click" />
                    </StackPanel>
                    
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="ScanStatusText" Text="等待扫描..." />
                        <ProgressBar 
                            x:Name="ScanProgressBar"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            IsIndeterminate="False" />
                    </StackPanel>
                </StackPanel>
            </Expander>
            
            <!-- 文本列表区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="扫描结果" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <InfoBadge x:Name="TextCountBadge" Value="0" />
                    </StackPanel>
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    
                    <!-- 过滤和搜索 -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox 
                            x:Name="TextTypeFilterComboBox"
                            Grid.Column="0"
                            Header="类型筛选"
                            SelectedIndex="0">
                            <ComboBoxItem Content="全部" Tag="All" />
                            <ComboBoxItem Content="Assembly-CSharp" Tag="Script" />
                            <ComboBoxItem Content="MonoBehaviour" Tag="MonoBehaviour" />
                            <ComboBoxItem Content="TextAsset" Tag="TextAsset" />
                        </ComboBox>
                        
                        <AutoSuggestBox 
                            x:Name="SearchBox"
                            Grid.Column="1"
                            Header="搜索"
                            PlaceholderText="搜索文本内容..."
                            QueryIcon="Find" />
                    </Grid>
                    
                    <!-- 数据表格 -->
                    <Border 
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        MinHeight="300">
                        <ListView 
                            x:Name="TextListView"
                            SelectionMode="Extended">
                            <ListView.Header>
                                <Grid Padding="16,12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="原文" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="类型" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="位置" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            
                            <!-- 占位提示 -->
                            <ListViewItem IsEnabled="False">
                                <TextBlock 
                                    Text="暂无数据，请先扫描游戏文本" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </ListViewItem>
                        </ListView>
                    </Border>
                </StackPanel>
            </Expander>
            
            <!-- 导出导入区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="导出与导入" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="ExportButton"
                            IsEnabled="False"
                            Click="ExportButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEDE1;" FontSize="16" />
                                <TextBlock Text="导出至Excel" />
                            </StackPanel>
                        </Button>
                        
                        <Button 
                            x:Name="ImportButton"
                            IsEnabled="False"
                            Click="ImportButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B5;" FontSize="16" />
                                <TextBlock Text="从Excel导入" />
                            </StackPanel>
                        </Button>
                        
                        <Button 
                            x:Name="ApplyButton"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"
                            Click="ApplyButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="16" />
                                <TextBlock Text="应用修改" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <InfoBar 
                        x:Name="ExportImportInfoBar"
                        Title="提示"
                        Message="导出Excel后可在表格中翻译文本，然后导入回程序应用修改"
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="True" />
                </StackPanel>
            </Expander>
            
            <!-- 扫描与过滤设置 -->
            <Expander IsExpanded="False" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="扫描与过滤设置" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <!-- 扫描来源 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="扫描来源" FontWeight="SemiBold"/>
                        <CheckBox x:Name="ScanAssemblyCheckBox" Content="Assembly-CSharp.dll (脚本代码)" IsChecked="True"/>
                        <CheckBox x:Name="ScanMonoBehaviourCheckBox" Content="MonoBehaviour (游戏对象组件)" IsChecked="True"/>
                        <CheckBox x:Name="ScanTextAssetCheckBox" Content="TextAsset (文本资源文件)" IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- 过滤设置 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="过滤设置" FontWeight="SemiBold"/>
                        <NumberBox x:Name="MinTextLengthBox" Header="最小文本长度" Value="2" Minimum="1" Maximum="100" SpinButtonPlacementMode="Compact"/>
                        <CheckBox x:Name="UseEngineKeywordsCheckBox" Content="过滤引擎保留关键字" IsChecked="True"/>
                    </StackPanel>
                    
                    <!-- 自定义排除关键字 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="自定义排除关键字" FontWeight="SemiBold"/>
                        <TextBlock Text="每行一个关键字，完全匹配时将跳过该文本" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBox x:Name="CustomKeywordsTextBox" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" PlaceholderText="例如:&#x0a;SaveData&#x0a;GameManager"/>
                    </StackPanel>
                    
                    <!-- 自定义排除正则表达式 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="自定义排除正则表达式" FontWeight="SemiBold"/>
                        <TextBlock Text="每行一个正则表达式，匹配时将跳过该文本" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBox x:Name="CustomPatternsTextBox" AcceptsReturn="True" TextWrapping="Wrap" MinHeight="100" PlaceholderText="例如:&#x0a;^Item_\d+$&#x0a;^[A-Z]{2,3}_"/>
                    </StackPanel>
                </StackPanel>
            </Expander>
            
        </StackPanel>
    </ScrollViewer>
</Page>
