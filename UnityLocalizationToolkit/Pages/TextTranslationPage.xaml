<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="UnityLocalizationToolkit.Pages.TextTranslationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnityLocalizationToolkit.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer Padding="40,20,40,40">
        <StackPanel Spacing="24">
            
            <!-- 页面标题 -->
            <TextBlock 
                Text="修改游戏文本" 
                Style="{StaticResource TitleTextBlockStyle}" />
            
            <!-- 项目选择区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="项目设置" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox 
                            x:Name="GamePathTextBox"
                            Grid.Column="0"
                            Header="游戏目录"
                            PlaceholderText="选择Unity游戏的根目录..."
                            IsReadOnly="True" />
                        
                        <Button 
                            x:Name="SelectFolderButton"
                            Grid.Column="1"
                            Content="选择目录"
                            VerticalAlignment="Bottom"
                            Click="SelectFolderButton_Click" />
                    </Grid>
                    
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <InfoBar 
                            x:Name="BackendInfoBar"
                            Grid.Column="0"
                            Title="后端类型"
                            Message="请先选择游戏目录"
                            Severity="Informational"
                            IsOpen="True"
                            IsClosable="False" />
                        
                        <ComboBox 
                            x:Name="SourceLanguageComboBox"
                            Grid.Column="1"
                            Header="源语言（游戏原始语言）"
                            HorizontalAlignment="Stretch"
                            SelectedIndex="0">
                            <ComboBoxItem Content="日语" Tag="ja" />
                            <ComboBoxItem Content="英语" Tag="en" />
                            <ComboBoxItem Content="韩语" Tag="ko" />
                            <ComboBoxItem Content="简体中文" Tag="zh-CN" />
                            <ComboBoxItem Content="繁体中文" Tag="zh-TW" />
                            <ComboBoxItem Content="其他" Tag="other" />
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Expander>
            
            <!-- 扫描控制区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="文本扫描" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="ScanButton"
                            Content="扫描游戏文本"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"
                            Click="ScanButton_Click">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="S" />
                            </Button.KeyboardAccelerators>
                        </Button>
                        
                        <Button 
                            x:Name="StopScanButton"
                            Content="停止扫描"
                            IsEnabled="False"
                            Click="StopScanButton_Click" />
                    </StackPanel>
                    
                    <StackPanel Spacing="4">
                        <TextBlock x:Name="ScanStatusText" Text="等待扫描..." />
                        <ProgressBar 
                            x:Name="ScanProgressBar"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            IsIndeterminate="False" />
                    </StackPanel>
                </StackPanel>
            </Expander>
            
            <!-- 文本列表区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="扫描结果" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <InfoBadge x:Name="TextCountBadge" Value="0" />
                    </StackPanel>
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    
                    <!-- 过滤和搜索 -->
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox 
                            x:Name="TextTypeFilterComboBox"
                            Grid.Column="0"
                            Header="类型筛选"
                            SelectedIndex="0">
                            <ComboBoxItem Content="全部" Tag="All" />
                            <ComboBoxItem Content="Assembly-CSharp" Tag="Script" />
                            <ComboBoxItem Content="MonoBehaviour" Tag="MonoBehaviour" />
                            <ComboBoxItem Content="TextAsset" Tag="TextAsset" />
                        </ComboBox>
                        
                        <AutoSuggestBox 
                            x:Name="SearchBox"
                            Grid.Column="1"
                            Header="搜索"
                            PlaceholderText="搜索文本内容..."
                            QueryIcon="Find" />
                    </Grid>
                    
                    <!-- 数据表格 -->
                    <Border 
                        BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        MinHeight="300">
                        <ListView 
                            x:Name="TextListView"
                            SelectionMode="Extended">
                            <ListView.Header>
                                <Grid Padding="16,12" Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="原文" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="1" Text="类型" FontWeight="SemiBold" />
                                    <TextBlock Grid.Column="2" Text="位置" FontWeight="SemiBold" />
                                </Grid>
                            </ListView.Header>
                            
                            <!-- 占位提示 -->
                            <ListViewItem IsEnabled="False">
                                <TextBlock 
                                    Text="暂无数据，请先扫描游戏文本" 
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            </ListViewItem>
                        </ListView>
                    </Border>
                </StackPanel>
            </Expander>
            
            <!-- 导出导入区域 -->
            <Expander IsExpanded="True" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="导出与导入" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="16" Padding="0,16,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button 
                            x:Name="ExportButton"
                            IsEnabled="False"
                            Click="ExportButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xEDE1;" FontSize="16" />
                                <TextBlock Text="导出至Excel" />
                            </StackPanel>
                        </Button>
                        
                        <Button 
                            x:Name="ImportButton"
                            IsEnabled="False"
                            Click="ImportButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8B5;" FontSize="16" />
                                <TextBlock Text="从Excel导入" />
                            </StackPanel>
                        </Button>
                        
                        <Button 
                            x:Name="ApplyButton"
                            Style="{StaticResource AccentButtonStyle}"
                            IsEnabled="False"
                            Click="ApplyButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE73E;" FontSize="16" />
                                <TextBlock Text="应用修改" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <InfoBar 
                        x:Name="ExportImportInfoBar"
                        Title="提示"
                        Message="导出Excel后可在表格中翻译文本，然后导入回程序应用修改"
                        Severity="Informational"
                        IsOpen="True"
                        IsClosable="True" />
                </StackPanel>
            </Expander>
            
            <!-- 常见不可翻译变量提示 -->
            <Expander HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <TextBlock Text="引擎保留变量（不建议翻译）" Style="{StaticResource SubtitleTextBlockStyle}" />
                </Expander.Header>
                <StackPanel Spacing="8" Padding="0,16,0,0">
                    <TextBlock 
                        Text="以下是Unity引擎常见的保留变量和关键字，修改这些内容可能导致游戏崩溃或异常："
                        TextWrapping="Wrap"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="UnityEngine" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="GameObject" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Transform" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="MonoBehaviour" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="ScriptableObject" FontFamily="Consolas" />
                        </Border>
                    </ItemsControl>
                    
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Awake" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Start" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="Update" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="FixedUpdate" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="LateUpdate" FontFamily="Consolas" />
                        </Border>
                        <Border Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" CornerRadius="4" Padding="8,4">
                            <TextBlock Text="OnDestroy" FontFamily="Consolas" />
                        </Border>
                    </ItemsControl>
                </StackPanel>
            </Expander>
            
        </StackPanel>
    </ScrollViewer>
</Page>
